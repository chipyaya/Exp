extends layout

block content
	img.loading(src='/img/web_loading.png')
	.loadingbar
	style.
		img.loading{
			position:absolute;
			width:100%;
			height:100vh;
			z-index:99
		}
		.loadingbar{
			width: 0;
			height: 150px;
			background: #ffd300;
			position:absolute;
			z-index:10;
			left: 250px;
			top:50%;
		}
	script.
		$(document).ready(function(){
			$.get('/uploadtoimgur',function(data){
				$.get('/makeqrcode',function(data){
					window.location='/share';
				});
			});
			function loadingbar(){
				$('.loadingbar').animate({'width':'+=1000px'},30000);
			}
			loadingbar();
		});
